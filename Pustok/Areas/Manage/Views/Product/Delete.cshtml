@model Product
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Delete</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/image/products/@Model.MainImage" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Muellifin adi: @Model.Author.Name</h5>
                <h5 class="card-title">Janrin adi: @Model.Genre.Name</h5>
                <h5 class="card-title">Kitabin adi: @Model.Title</h5>
                <h5 class="card-title">Endrim qiymeti: @Model.DiscountPrice</h5>
                <h5 class="card-title">Qiymeti: @Model.Price</h5>
            </div>
        </div>
        <div class="col-lg-6">
            <a class="btn btn-primary" asp-action="Index">Go to List</a>
            <a class="btn btn-danger" asp-action="DeleteProduct"  asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</div>

